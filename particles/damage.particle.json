{
    "format_version": "1.10.0",
    "particle_effect": {
        "description": {
            "identifier": "bedrock_perfected:damage",
            "basic_render_parameters": {
                "material": "particles_alpha",
                "texture": "textures/particle/damage_numbers"
            }
        },
        "components": {
            "minecraft:emitter_initialization": {
                "creation_expression": "variable.particle_random_1 = Math.random(0, 1);"
            },
            "minecraft:emitter_rate_instant": {
                "num_particles": 1
            },
            "minecraft:emitter_lifetime_once": {
                "active_time": 0.1
            },
            "minecraft:emitter_shape_point": {},
            "minecraft:particle_lifetime_expression": {
                "max_lifetime": "variable.duration"
            },
            "minecraft:particle_initial_speed": 0.5,
            "minecraft:particle_motion_dynamic": {
                "linear_acceleration": [0, -2, 0]
            },
            "minecraft:particle_motion_parametric": {
                "relative_position": [
                    "(Math.sin(variable.particle_age * 2) * 0.1) + (variable.particle_random_1 * 0.2 - 0.1)",
                    "Math.max(0, variable.particle_age * 1.5 - Math.pow(variable.particle_age * 2, 2))",
                    "(Math.cos(variable.particle_age * 1.5) * 0.05)"
                ]
            },
            // size
            "minecraft:particle_appearance_billboard": {
                "size": [0.2, 0.2],
                "facing_camera_mode": "rotate_xyz",
                "uv": {
                    "texture_width": 80,
                    "texture_height": 8,
                    "uv": ["variable.digit * 8", "0"],
                    "uv_size": [8, 8]
                }
            }
        }
    }
}
